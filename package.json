version: 1
frontend:
  phases:
    preBuild:
      commands:
        - npm ci
    build:
      commands:
        - npx next telemetry disable
        - npm run build           # ← більше НЕ next export
  artifacts:
    baseDirectory: out           # Next 14 з output:export кладе статику в out/
    files:
      - '**/*'
  cache:
    paths:
      - node_modules/**/*
      - .next/cache/**/*
